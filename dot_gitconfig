[user]
	name = Nyde
	email = edwynchev@gmail.com
	signingKey = /home/nyde/.ssh/id_ed25519.pub
[gui]
	editor = code --wait
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	editor = micro
[diff]
	tool = vscode
[difftool]
    prompt = false
[difftool "meld"]
        cmd = meld "$LOCAL" "$REMOTE"
[difftool "vscode"]
	cmd = code --diff $LOCAL $REMOTE
[merge]
	tool = vscode
[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
[mergetool "vscode"]
	cmd = code --wait $MERGED
[init]
	defaultBranch = main
[gpg]
	format = ssh
[commit]
	gpgSign = true
[tag]
	gpgSign = true
