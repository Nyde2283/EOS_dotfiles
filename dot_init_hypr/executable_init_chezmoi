sudo pacman -S --noconfirmation chezmoi &&
chezmoi init https://github.com/Nyde2283/EOS_dotfiles &&
chezmoi apply &&
mkdir /home/nyde/.config/chezmoi &&
cp /home/nyde/.config/cz_config /home/nyde/.config/chezmoi/ &&
mv /home/nyde/.config/chezmoi/cz_config /home/nyde/.config/chezmoi/chezmoi.toml &&
sudo chmod u+x ~/.init_hypr/soft_installer &&

echo "Now run ~/.init_hypr/soft_installer to install all softwares inlcuding hyprland"

~/.init_hypr/soft_installer
